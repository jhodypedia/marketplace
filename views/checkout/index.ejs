<h1 class="h4 mb-3">Checkout</h1>
<table class="table align-middle">
  <thead><tr><th>Item</th><th class="text-end">Harga</th><th class="text-center">Qty</th><th class="text-end">Subtotal</th></tr></thead>
  <tbody>
    <% cart.forEach(it => { %>
      <tr>
        <td><%= it.title %></td>
        <td class="text-end"><%= it.price.toLocaleString('id-ID') %></td>
        <td class="text-center"><%= it.qty %></td>
        <td class="text-end"><%= (it.price*it.qty).toLocaleString('id-ID') %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<div class="text-end">
  <div>Subtotal: <strong><%= subtotal.toLocaleString('id-ID') %> IDR</strong></div>
  <div>Fee Platform (<%= feePercent %>%): <strong><%= Math.round(subtotal*(feePercent/100)).toLocaleString('id-ID') %> IDR</strong></div>
  <div class="h5 mt-2">Grand Total: <%= (subtotal + Math.round(subtotal*(feePercent/100))).toLocaleString('id-ID') %> IDR</div>
  <form method="post" action="/checkout" class="mt-3">
    <button class="btn btn-success">Buat Order & Generate QRIS</button>
  </form>
</div>
